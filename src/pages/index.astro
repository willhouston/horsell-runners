---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import heroImage from "../assets/hero-run.svg";
import communityImage from "../assets/community-run.svg";
import coffeeImage from "../assets/coffee-run.svg";
import raceImage from "../assets/race-day.svg";

const title = "Horsell Runners | Friendly running club in Horsell, Surrey";
const description =
  "Horsell Runners is a welcoming community club in Surrey with weekly runs, walks, and social meetups. All paces welcome.";
---
<BaseLayout title={title} description={description}>
  <section class="hero">
    <div class="container hero-layout">
      <div>
        <span class="pill">Friendly. Local. All paces.</span>
        <h1 class="hero-title">Your Horsell running community.</h1>
        <p class="hero-lead">
          Join us for midweek runs, Saturday Breakfast Club, and Sunday Duvet Club.
          We keep things welcoming, social, and full of orange streak energy.
        </p>
        <div class="btn-row">
          <a class="btn btn-primary" href="/mailing-list">Join Mailing List</a>
          <a class="btn btn-outline" href="/runs">View Runs</a>
          <a class="btn btn-ghost" href="/contact">Contact Us</a>
        </div>
      </div>
      <div class="streak">
        <Image src={heroImage} alt="Horsell Runners hero" width={1200} height={800} format="webp" />
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="section-header">
        <span class="section-eyebrow">Run With Us</span>
        <h2 class="section-title">Weekly runs built around people first.</h2>
        <p class="section-subtitle">
          We meet outside the Beijing Restaurant in Horsell. Every session has friendly
          pacing and a buddy system, so you will never run alone unless you want to.
        </p>
      </div>
      <div class="grid grid-3">
        <div class="card">
          <h3>Wednesday Nights</h3>
          <p>Social runs and a separate walk option. Perfect for midweek motivation.</p>
          <a class="btn btn-outline" href="/runs#wednesday-runs">See Wednesday Runs</a>
        </div>
        <div class="card">
          <h3>Saturday Breakfast Club</h3>
          <p>Morning miles followed by coffee. Chatty pace, generous regroup points.</p>
          <a class="btn btn-outline" href="/runs#breakfast-club">Breakfast Club Details</a>
        </div>
        <div class="card">
          <h3>Sunday Duvet Club</h3>
          <p>Longer, slower runs for the weekend. Plenty of conversation.</p>
          <a class="btn btn-outline" href="/runs#duvet-club">Sunday Run Info</a>
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container grid grid-2">
      <div class="card">
        <Image src={communityImage} alt="Community runs" width={1200} height={800} format="webp" />
        <h3>Meet the community</h3>
        <p>
          Horsell Runners is about consistency, kindness, and cheering each other on.
          Whether you are training for a race or just getting started, you belong here.
        </p>
        <a class="btn btn-outline" href="/about">Learn About Us</a>
      </div>
      <div class="card">
        <Image src={coffeeImage} alt="Breakfast club coffee runs" width={1200} height={800} format="webp" />
        <h3>Join the Breakfast Club</h3>
        <p>
          Saturday mornings start at 08:00 and finish with coffee. Bring friends, bring
          questions, bring enthusiasm.
        </p>
        <a class="btn btn-outline" href="/runs#breakfast-club">Saturday Details</a>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container grid grid-2">
      <div class="card">
        <Image src={raceImage} alt="Race day support" width={1200} height={800} format="webp" />
        <h3>Race day support</h3>
        <p>
          We pick a few key races each season and train together. Expect tips, pace
          groups, and a loud cheer squad.
        </p>
        <a class="btn btn-outline" href="/races">See Upcoming Races</a>
      </div>
      <div class="card">
        <h3>Stay in the loop</h3>
        <p>
          Get our weekly reminders, route updates, and event invites straight to your
          inbox.
        </p>
        <a class="btn btn-primary" href="/mailing-list">Join Mailing List</a>
      </div>
    </div>
  </section>
</BaseLayout>
