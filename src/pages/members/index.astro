---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PageHeader from "../../components/PageHeader.astro";

const title = "Members Area | Horsell Runners";
const description =
  "Horsell Runners members area. This space will be secured with access controls soon.";
---
<BaseLayout title={title} description={description} noIndex={true}>
  <PageHeader
    title="Members area"
    subtitle="This space will be secured soon. For now, it is a placeholder for member resources and updates."
  />

  <section class="section">
    <div class="container grid grid-3">
      <div class="card">
        <h3>Coming soon</h3>
        <p>
          We plan to add route libraries, event sign-ups, and shared resources here
          once access is secured.
        </p>
      </div>
      <div class="card">
        <h3>Members merch</h3>
        <p>Order Horsell Runners kit from the private members merch page.</p>
        <a class="btn btn-primary" href="/members/merch">Go to Members Merch</a>
      </div>
      <div class="card">
        <h3>Members resources</h3>
        <p>View resources and member kit ordering details.</p>
        <div class="btn-row">
          <a class="btn btn-outline" href="/members/resources">Go to Resources</a>
          <a class="btn btn-primary" href="/members/merch">Members Merch</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
