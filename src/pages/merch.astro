---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHeader from "../components/PageHeader.astro";
import { Image } from "astro:assets";
import merchImage from "../assets/merch.svg";

const title = "Merch | Horsell Runners";
const description =
  "Support Horsell Runners with club-branded kit, from tees and vests to winter layers.";
---
<BaseLayout title={title} description={description}>
  <PageHeader
    title="Club Merch"
    subtitle="Wear the orange streak. Our club kit is comfortable, practical, and easy to order in batches."
  />

  <section class="section">
    <div class="container grid grid-2">
      <div class="card">
        <Image src={merchImage} alt="Horsell Runners merch" width={1200} height={800} format="webp" />
        <h3>Current kit options</h3>
        <ul>
          <li>Lightweight orange tee with reflective logo</li>
          <li>Performance vest for warmer sessions</li>
          <li>Long-sleeve winter top</li>
          <li>Beanie and snood set</li>
        </ul>
      </div>
      <div class="card">
        <h3>How to order</h3>
        <p>
          We order in bulk every few months. Add your name to the interest list and we
          will let you know when the next order window opens.
        </p>
        <div class="btn-row">
          <a class="btn btn-primary" href="/contact">Register Interest</a>
          <a class="btn btn-outline" href="/mailing-list">Join Mailing List</a>
        </div>
        <p class="meta">Sizes: XSâ€“XL. Payment details shared via email.</p>
      </div>
    </div>
  </section>
</BaseLayout>
