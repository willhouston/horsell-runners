---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHeader from "../components/PageHeader.astro";
import { Image } from "astro:assets";
import { getEntry } from "astro:content";
import communityImage from "../assets/IMG_1818.jpeg";

const aboutPage = await getEntry("pages", "about");

if (!aboutPage) {
  throw new Error("Missing content entry: src/content/pages/about.md");
}

const { Content } = await aboutPage.render();
const { title, description, headerTitle, headerSubtitle } = aboutPage.data;
---

<BaseLayout title={title} description={description}>
  <PageHeader
    title={headerTitle ?? "About the club"}
    subtitle={headerSubtitle ??
      "We are a friendly, inclusive running community based in Horsell, Surrey. Expect smiles, encouragement, and a steady orange streak of energy."}
  />

  <section class="section">
    <div class="container">
      <article class="card about-feature">
        <div class="about-media">
          <Image
            src={communityImage}
            alt="Horsell Runners community"
            width={1200}
            height={800}
            format="webp"
          />
        </div>
        <div class="about-content">
          <article class="about-copy">
            <Content />
          </article>
        </div>
      </article>
    </div>
  </section>
</BaseLayout>

<style>
  .about-feature {
    display: grid;
    grid-template-columns: minmax(280px, 42%) minmax(0, 1fr);
    gap: 1.25rem;
    align-items: start;
    padding: 1rem;
  }

  .about-media :global(picture) {
    display: block;
    line-height: 0;
  }

  .about-media :global(img) {
    width: 100%;
    height: auto;
    border-radius: var(--radius-sm);
  }

  .about-content {
    min-width: 0;
  }

  .about-copy :global(h2),
  .about-copy :global(h3) {
    margin-top: 0;
    font-family: var(--font-display);
  }

  .about-copy :global(p) {
    color: var(--color-muted);
    margin: 0 0 0.85rem;
  }

  .about-copy :global(p:last-child) {
    margin-bottom: 0;
  }

  @media (max-width: 900px) {
    .about-feature {
      grid-template-columns: 1fr;
    }
  }
</style>
